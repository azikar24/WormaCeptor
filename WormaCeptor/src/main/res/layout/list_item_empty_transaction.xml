<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/code"
        android:layout_width="40dp"
        android:layout_height="23dp"
        android:background="@color/colorLoader"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/path"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorLoader"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@id/code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/code"
        app:layout_constraintTop_toTopOf="@id/code" />

    <View
        android:id="@+id/host"
        android:layout_width="125dp"
        android:layout_height="23dp"
        android:layout_marginTop="6dp"
        android:background="@color/colorLoader"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="@id/path"
        app:layout_constraintTop_toBottomOf="@id/path" />

    <ImageView
        android:id="@+id/ssl"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_https_grey_24dp"
        app:layout_constraintBottom_toBottomOf="@id/host"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/host"
        app:layout_constraintTop_toTopOf="@id/host" />

    <LinearLayout
        android:id="@+id/meta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/host"
        app:layout_constraintTop_toBottomOf="@id/host">

        <View
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/colorLoader"
            android:padding="2dp" />

        <View
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/colorLoader"
            android:padding="2dp" />

        <View
            android:id="@+id/size"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:background="@color/colorLoader"
            android:padding="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>