#!/bin/bash
# =============================================================================
# Pre-commit Hook for WormaCeptor
# =============================================================================
# This hook runs before each commit to ensure code quality.
# It checks:
#   1. Code formatting (Spotless/ktlint)
#   2. Static analysis (Detekt)
#
# To skip this hook (not recommended), use: git commit --no-verify
# =============================================================================

set -e

echo "========================================"
echo "Running pre-commit checks..."
echo "========================================"

# Get the project root directory
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

cd "$PROJECT_ROOT"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if gradlew exists and is executable
if [ ! -x "./gradlew" ]; then
    echo -e "${RED}Error: gradlew not found or not executable${NC}"
    exit 1
fi

# Get list of staged Kotlin files
STAGED_KT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.kt$|\.kts$' || true)

if [ -z "$STAGED_KT_FILES" ]; then
    echo -e "${GREEN}No Kotlin files staged. Skipping checks.${NC}"
    exit 0
fi

echo -e "${YELLOW}Checking staged Kotlin files...${NC}"

# Run Spotless check
echo ""
echo "1/2 Checking code formatting (Spotless)..."
if ! ./gradlew spotlessCheck --daemon -q 2>/dev/null; then
    echo ""
    echo -e "${RED}========================================${NC}"
    echo -e "${RED}Formatting issues found!${NC}"
    echo -e "${RED}========================================${NC}"
    echo ""
    echo "Run './gradlew spotlessApply' to fix formatting issues."
    echo "Then stage the fixed files and commit again."
    echo ""
    exit 1
fi
echo -e "${GREEN}Formatting check passed.${NC}"

# Run Detekt
echo ""
echo "2/2 Running static analysis (Detekt)..."
if ! ./gradlew detekt --daemon -q 2>/dev/null; then
    echo ""
    echo -e "${RED}========================================${NC}"
    echo -e "${RED}Static analysis issues found!${NC}"
    echo -e "${RED}========================================${NC}"
    echo ""
    echo "Check the Detekt report for details:"
    echo "  build/reports/detekt/detekt.html"
    echo ""
    echo "Fix the issues and commit again."
    echo ""
    exit 1
fi
echo -e "${GREEN}Static analysis passed.${NC}"

echo ""
echo -e "${GREEN}========================================${NC}"
echo -e "${GREEN}All pre-commit checks passed!${NC}"
echo -e "${GREEN}========================================${NC}"
echo ""

exit 0
