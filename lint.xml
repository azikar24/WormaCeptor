<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Treat warnings as errors for critical issues -->
    <issue id="HardcodedText" severity="error" />
    <issue id="MissingTranslation" severity="error" />
    <issue id="ObsoleteLintCustomCheck" severity="error" />

    <!-- Performance -->
    <issue id="UseCompoundDrawables" severity="warning" />
    <issue id="UseSparseArrays" severity="warning" />
    <issue id="DrawAllocation" severity="warning" />

    <!-- Accessibility -->
    <issue id="ContentDescription" severity="error" />
    <issue id="LabelFor" severity="error" />

    <!-- Security -->
    <issue id="HardcodedDebugMode" severity="error" />
    <issue id="AllowBackup" severity="warning" />
    <issue id="SetJavaScriptEnabled" severity="warning" />

    <!-- Compose -->
    <issue id="ComposableLambdaParameterPosition" severity="error" />
    <issue id="ComposableNaming" severity="error" />

    <!-- Correctness -->
    <issue id="NewApi" severity="error" />
    <issue id="InlinedApi" severity="warning" />
    <issue id="Override" severity="error" />

    <!-- Ignore for test code -->
    <issue id="HardcodedText">
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
    </issue>

    <!-- Ignore for build directories -->
    <issue id="all">
        <ignore path="**/build/**" />
    </issue>
</lint>
